<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="LogPageButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#4CAF50"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Width" Value="300"/>
    </Style>

    <Style x:Key="SingUpPageButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#4CAF50"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Width" Value="300"/>
    </Style>

    <Style x:Key="NavigationPanelStyle" TargetType="StackPanel">
        <Setter Property="Background" Value="#333"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>

    <Style x:Key="NavigationButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10"/>
        
    </Style>

    <Style x:Key="LogStackPanel" TargetType="StackPanel">
        <Setter Property="Width" Value="500"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="LogTextBox" TargetType="TextBox">
        <Setter Property="Width" Value="500"/>
        <Setter Property="Height" Value="25"/>
    </Style>

    <Style x:Key="LogPasswordBox" TargetType="PasswordBox">
        <Setter Property="Width" Value="500"/>
        <Setter Property="Height" Value="25"/>
    </Style>

</ResourceDictionary>